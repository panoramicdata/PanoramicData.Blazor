@page "/pdaudiochannel"

<h1>PDAudioChannel</h1>

<DemoSourceView SourceFiles="Pages/PDAudioChannelPage.razor, Pages/PDAudioChannelPage.razor.cs">

	<div class="mb-3">
		<h3>Basic Audio Channel</h3>
		<span class="text-muted small">A single audio channel with default settings</span>
	</div>

	<div style="display: inline-block;">
		<PDAudioChannel Label="Channel 1"
						FaderValue="0.7"
						GainValue="0.6" />
	</div>

	<hr class="my-4" />

	<div class="mb-3">
		<h3>Custom Colors</h3>
		<span class="text-muted small">Channels with custom knob and button colors - interact to see events</span>
	</div>

	<CascadingValue Value="_colorEventManager">
		<div class="row g-3">
			<div class="col-12 col-lg-8">
				<div style="display: flex; gap: 20px; flex-wrap: wrap;">
					<PDAudioChannel Label="Guitar"
									FaderValue="@_guitarFader"
									GainValue="@_guitarGain"
									PflValue="@_guitarPfl"
									MuteValue="@_guitarMute"
									FaderValueChanged="@(v => OnColorDemoValueChanged("Guitar", "Fader", ref _guitarFader, v))"
									GainValueChanged="@(v => OnColorDemoValueChanged("Guitar", "Gain", ref _guitarGain, v))"
									CompValueChanged="@(v => OnColorDemoValueChanged("Guitar", "Comp", ref _guitarComp, v))"
									PflValueChanged="@(v => OnColorDemoValueChanged("Guitar", "PFL", ref _guitarPfl, v))"
									MuteValueChanged="@(v => OnColorDemoValueChanged("Guitar", "Mute", ref _guitarMute, v))"
									GainColor="orange"
									CompColor="cyan"
									EqColor="yellow"
									DspColor="lime"
									PanColor="magenta"
									PflActiveColor="#ff0"
									PflInactiveColor="#880" />

					<PDAudioChannel Label="Bass"
									FaderValue="@_bassFader"
									PflValue="@_bassPfl"
									MuteValue="@_bassMute"
									FaderValueChanged="@(v => OnColorDemoValueChanged("Bass", "Fader", ref _bassFader, v))"
									GainValueChanged="@(v => OnColorDemoValueChanged("Bass", "Gain", ref _bassGain, v))"
									PflValueChanged="@(v => OnColorDemoValueChanged("Bass", "PFL", ref _bassPfl, v))"
									MuteValueChanged="@(v => OnColorDemoValueChanged("Bass", "Mute", ref _bassMute, v))"
									GainColor="#f0f"
									CompColor="#0ff"
									EqColor="pink"
									MuteActiveColor="#0ff"
									MuteInactiveColor="#088" />

					<PDAudioChannel Label="Drums"
									FaderValue="@_drumsFader"
									PflValue="@_drumsPfl"
									MuteValue="@_drumsMute"
									FaderValueChanged="@(v => OnColorDemoValueChanged("Drums", "Fader", ref _drumsFader, v))"
									GainValueChanged="@(v => OnColorDemoValueChanged("Drums", "Gain", ref _drumsGain, v))"
									PflValueChanged="@(v => OnColorDemoValueChanged("Drums", "PFL", ref _drumsPfl, v))"
									MuteValueChanged="@(v => OnColorDemoValueChanged("Drums", "Mute", ref _drumsMute, v))"
									GainColor="white"
									CompColor="silver"
									DspColor="gold" />
				</div>
			</div>
			<div class="col-12 col-lg-4">
				<EventView />
			</div>
		</div>
	</CascadingValue>

	<hr class="my-4" />

	<div class="mb-3">
		<h3>Interactive Controls with Event Logging</h3>
		<span class="text-muted small">Channel with bound values that can be controlled - events shown on the right</span>
	</div>

	<CascadingValue Value="_interactiveEventManager">
		<div class="row g-3">
			<div class="col-12 col-lg-8">
				<PDAudioChannel FaderValue="@_faderValue"
								GainValue="@_gainValue"
								CompValue="@_compValue"
								EqHighValue="@_eqHighValue"
								EqMidValue="@_eqMidValue"
								EqLowValue="@_eqLowValue"
								DspValue="@_dspValue"
								PanValue="@_panValue"
								PflValue="@_pflValue"
								MuteValue="@_muteValue"
								FaderValueChanged="@(v => OnValueChanged("Fader", ref _faderValue, v))"
								GainValueChanged="@(v => OnValueChanged("Gain", ref _gainValue, v))"
								CompValueChanged="@(v => OnValueChanged("Comp", ref _compValue, v))"
								EqHighValueChanged="@(v => OnValueChanged("EQ High", ref _eqHighValue, v))"
								EqMidValueChanged="@(v => OnValueChanged("EQ Mid", ref _eqMidValue, v))"
								EqLowValueChanged="@(v => OnValueChanged("EQ Low", ref _eqLowValue, v))"
								DspValueChanged="@(v => OnValueChanged("DSP", ref _dspValue, v))"
								PanValueChanged="@(v => OnValueChanged("Pan", ref _panValue, v))"
								PflValueChanged="@(v => OnValueChanged("PFL", ref _pflValue, v))"
								MuteValueChanged="@(v => OnValueChanged("Mute", ref _muteValue, v))"
								Label="Vocals" />
			</div>
			<div class="col-12 col-lg-4">
				<EventView />
			</div>
		</div>
	</CascadingValue>

	<hr class="my-4" />

	<div class="mb-3">
		<h3>Disabled Channel</h3>
		<span class="text-muted small">A channel in disabled state with diagonal hash overlay</span>
	</div>

	<div style="display: inline-block;">
		<PDAudioChannel Label="Disabled"
						FaderValue="0.5"
						IsEnabled="false" />
	</div>

	<hr class="my-4" />

	<div class="mb-3">
		<h3>Multiple Channels</h3>
		<span class="text-muted small">Example showing multiple channels together - interact to see events</span>
	</div>

