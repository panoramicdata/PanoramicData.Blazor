									GainValue="@_multi3Gain"
									CompValue="@_multi3Comp"
									EqHighValue="@_multi3EqHigh"
									EqMidValue="@_multi3EqMid"
									EqLowValue="@_multi3EqLow"
									DspValue="@_multi3Dsp"
									PanValue="@_multi3Pan"
									PflValue="@_multi3Pfl"
									MuteValue="@_multi3Mute"
									FaderValueChanged="@(v => OnMultiChannelValueChanged("Ch 3", "Fader", ref _multi3Fader, v))"
									GainValueChanged="@(v => OnMultiChannelValueChanged("Ch 3", "Gain", ref _multi3Gain, v))"
