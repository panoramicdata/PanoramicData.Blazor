									EqHighValueChanged="@(v => OnMultiChannelValueChanged("Ch 3", "EQ High", ref _multi3EqHigh, v))"
									EqMidValueChanged="@(v => OnMultiChannelValueChanged("Ch 3", "EQ Mid", ref _multi3EqMid, v))"
									EqLowValueChanged="@(v => OnMultiChannelValueChanged("Ch 3", "EQ Low", ref _multi3EqLow, v))"
									DspValueChanged="@(v => OnMultiChannelValueChanged("Ch 3", "DSP", ref _multi3Dsp, v))"
									PanValueChanged="@(v => OnMultiChannelValueChanged("Ch 3", "Pan", ref _multi3Pan, v))"
									PflValueChanged="@(v => OnMultiChannelValueChanged("Ch 3", "PFL", ref _multi3Pfl, v))"
