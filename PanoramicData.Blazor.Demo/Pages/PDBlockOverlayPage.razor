@page "/pdblockoverlay"

<h1>PDBlockOverlay</h1>

<DemoSourceView SourceFiles="Pages/PDBlockOverlayPage.razor, Pages/PDBlockOverlayPage.razor.cs">
	<p>
		<button class="btn btn-primary" @onclick="@ShowFor1SecondAsync">Show a blank BlockOverlay for 1 second</button>
	</p>

	<p>
		<button class="btn btn-primary" @onclick="@ShowFor3SecondsAsync">Show BlockOverlay with HTML for 3 seconds</button>
	</p>

	<PDBusyOverlay IsBusy="_isBusyLocal" OverlayCssClass="fas fa-2x fa-spin fa-spinner">
		<button class="btn btn-primary" @onclick="@ShowLocalOverlayAsync">Show BusyOverlay for 5 seconds</button>
	</PDBusyOverlay>

</DemoSourceView>
