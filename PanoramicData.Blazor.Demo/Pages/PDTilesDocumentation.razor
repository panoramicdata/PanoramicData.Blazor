	@* Examples Section *@
	<section id="examples">
		<h2 class="doc-section">Examples</h2>

		@* Example 2: Grid Configuration *@
		<DocExample Title="Grid Size and Appearance"
					AnchorId="grid-configuration"
					Code="@_example2Code"
					Language="razor"
					DemoStyle="height: 300px; background-color: #0d1b2a;">
			<DemoContent>
				<PDTiles Options="@_example2Options"
						 Logos="@_basicLogos"
						 Height="100%"
						 Width="100%" />
			</DemoContent>
			<Description>
				<p>
					Customize the grid with <code>Columns</code>, <code>Rows</code>, <code>Depth</code>, and <code>Gap</code>.
					The <code>TileColor</code> sets the base color from which lighter/darker shades are generated
					for the 3D effect.
				</p>
			</Description>
		</DocExample>

		@* Example 3: Straight Line Connectors *@
		<DocExample Title="Straight Line Connectors"
					AnchorId="straight-connectors"
					Code="@_example3Code"
					Language="razor"
					DemoStyle="height: 300px; background-color: #1a1a2e;">
			<DemoContent>
				<PDTiles Options="@_example3Options"
						 ConnectorOptions="@_example3ConnectorOptions"
						 Connectors="@_example3Connectors"
						 Logos="@_basicLogos"
						 Height="100%"
						 Width="100%" />
			</DemoContent>
			<Description>
				<p>
					<code>ConnectionMode.StraightLine</code> connects adjacent tiles (including diagonals) with
					straight ribbon-like connectors. Use <code>FillPattern</code> to choose between Solid, Bars,
					or Chevrons patterns.
				</p>
			</Description>
		</DocExample>

		@* Example 4: Bezier Curve Connectors (Row) *@
		<DocExample Title="Bezier Curves - Row Mode"
					AnchorId="row-curves"
					Code="@_example4Code"
					Language="razor"
					DemoStyle="height: 300px; background-color: #1a1a2e;">
			<DemoContent>
				<PDTiles Options="@_example4Options"
						 ConnectorOptions="@_example4ConnectorOptions"
						 Connectors="@_example4Connectors"
						 Logos="@_basicLogos"
						 Height="100%"
						 Width="100%" />
			</DemoContent>
			<Description>
				<p>
					<code>ConnectionMode.RowCurves</code> creates smooth bezier curves between tiles in adjacent rows.
					Tiles can connect to any column in the adjacent row, creating flowing horizontal connections.
					Adjust <code>CurveTension</code> (0-100) to control curve intensity.
				</p>
			</Description>
		</DocExample>

		@* Example 5: Effects (Glow, Reflection) *@
		<DocExample Title="Visual Effects"
					AnchorId="visual-effects"
					Code="@_example5Code"
					Language="razor"
					DemoStyle="height: 300px; background-color: #0a0a14;">
			<DemoContent>
				<PDTiles Options="@_example5Options"
						 Logos="@_basicLogos"
						 Height="100%"
						 Width="100%" />
			</DemoContent>
			<Description>
				<p>
					Add <code>Glow</code> for a radial light effect centered on the grid, and <code>Reflection</code>
					for a mirror effect below tiles. Use <code>LineOpacity</code> to show/hide the background grid lines.
				</p>
			</Description>
		</DocExample>

