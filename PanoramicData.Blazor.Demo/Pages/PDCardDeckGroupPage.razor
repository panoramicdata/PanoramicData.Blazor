@page "/pdcarddeckgroup"

<DemoSourceView SourceFiles="Pages/PDCardDeckGroupPage.razor, Pages/PDCardDeckGroupPage.razor.cs">

	<div>
		<p>Example 1: Kanban style board</p>
	</div>

	<PDCardDeckGroup @ref="_cardDeckGroup1"
		DataProviders="_todoLists"
					 DeckCss="pd-carddeck-area "
					 CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					 IsAnimated="true"
					 OnRearrange="(e) => OnRearrange(e, _cardDeckGroup1)"
					 OnSelect="(e) => OnSelect(e, _cardDeckGroup1)">

		<CardTemplate>
			<ExampleTicket Ticket="context"
						   Interactable="true" />
		</CardTemplate>

	</PDCardDeckGroup>

	<hr />

	<div>
		<p>Example 2: Simple</p>
	</div>

	<PDCardDeckGroup @ref="_cardDeckGroup2"
		DataProviders="_todoLists2"
					 OnRearrange="(e) => OnRearrange(e, _cardDeckGroup2)"
					 OnSelect="(e) => OnSelect(e, _cardDeckGroup2)" />

	<div>
		<p>Example 3: Kanban style multiselect board</p>
	</div>

	<PDCardDeckGroup @ref="_cardDeckGroup3"
		DataProviders="_todoLists3"
					 DeckCss="pd-carddeck-area "
					 MultipleSelection="true"
					 CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					 IsAnimated="true"
	OnRearrange="(e) => OnRearrange(e, _cardDeckGroup1)"
					 OnSelect="(e) => OnSelect(e, _cardDeckGroup1)">

		<CardTemplate>
			<ExampleTicket Ticket="context"
						   ShowEditOptions="true"
						   Interactable="true" />
		</CardTemplate>

	</PDCardDeckGroup>

	<EventView />

</DemoSourceView>

