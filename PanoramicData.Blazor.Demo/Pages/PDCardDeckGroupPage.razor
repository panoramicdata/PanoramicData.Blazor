@page "/pdcarddeckgroup"

<DemoSourceView SourceFiles="Pages/PDCardDeckGroupPage.razor, Pages/PDCardDeckGroupPage.razor.cs">

	<div>
		<p>Example 1: Kanban style board</p>
	</div>

	<PDCardDeckGroup DataProvider="_todoList1">

		<PDCardDeck DataFunction="GetDataFunction(_todoList1, TodoProgress.BeingDefined)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area">

			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>

		<PDCardDeck DataFunction="GetDataFunction(_todoList1, TodoProgress.InProgress)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area">
			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>

		<PDCardDeck DataFunction="GetDataFunction(_todoList1, TodoProgress.ReadyForTest)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area">
			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>

		<PDCardDeck DataFunction="GetDataFunction(_todoList1, TodoProgress.Done)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area">
			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>
	</PDCardDeckGroup>

	<hr />
