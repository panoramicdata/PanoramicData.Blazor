@page "/pdcarddeckgroup"

<DemoSourceView SourceFiles="Pages/PDCardDeckGroupPage.razor, Pages/PDCardDeckGroupPage.razor.cs">

	<div>
		<p>Example 1: Kanban style board</p>
	</div>

	<PDCardDeckGroup DataProvider="_todoList1"
					 CssClass="pd-kanbanboard">

		<PDCardDeck DataFunction="GetDataFunction(_todoList1, TodoProgress.BeingDefined)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area">

			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>

		<PDCardDeck DataFunction="GetDataFunction(_todoList1, TodoProgress.InProgress)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area">
			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>

		<PDCardDeck DataFunction="GetDataFunction(_todoList1, TodoProgress.ReadyForTest)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area">
			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>

		<PDCardDeck DataFunction="GetDataFunction(_todoList1, TodoProgress.Done)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area">
			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>
	</PDCardDeckGroup>

	<hr />

	<div>
		<p>Example 2: Simple</p>
	</div>

	<PDCardDeckGroup DataProvider="_todoList2">
		<PDCardDeck DataFunction="GetDataFunction(_todoList2, TodoProgress.BeingDefined)" />
		<PDCardDeck DataFunction="GetDataFunction(_todoList2, TodoProgress.InProgress)" />
		<PDCardDeck DataFunction="GetDataFunction(_todoList2, TodoProgress.Done)" />

	</PDCardDeckGroup>
	<hr />

	<div>
		<p>Example 3: Kanban style multiselect board</p>
	</div>

	<PDCardDeckGroup DataProvider="_todoList3"
					 CssClass="pd-kanbanboard">

		<PDCardDeck DataFunction="GetDataFunction(_todoList3, TodoProgress.BeingDefined)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area"
					MultipleSelection="true">

			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>

		<PDCardDeck DataFunction="GetDataFunction(_todoList3, TodoProgress.InProgress)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area"
					MultipleSelection="true">

			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>

		<PDCardDeck DataFunction="GetDataFunction(_todoList3, TodoProgress.ReadyForTest)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area"
					MultipleSelection="true">

			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>

		<PDCardDeck DataFunction="GetDataFunction(_todoList3, TodoProgress.Done)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area"
					MultipleSelection="true">

			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>
	</PDCardDeckGroup>

	<EventView />

</DemoSourceView>

