@page "/pdcarddeckgroup"

<DemoSourceView SourceFiles="Pages/PDCardDeckGroupPage.razor, Pages/PDCardDeckGroupPage.razor.cs">

	<div>
		<p>Example 1: Kanban style board</p>
	</div>

	<PDCardDeckGroup DataProvider="_todoList1"
					 Decks="[_cardDeck1, _cardDeck2, _cardDeck3]">

		<PDCardDeck @ref="_cardDeck1"
					DataFunction="() => _todoList1.GetDataAsync(new(), default)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area">

			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>

		<PDCardDeck @ref="_cardDeck2"
					DataFunction="() => _todoList1.GetDataAsync(new(), default)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area">
			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>

		<PDCardDeck @ref="_cardDeck3"
					DataFunction="() => _todoList1.GetDataAsync(new(), default)"
					IsAnimated="true"
					CardCss="@(card => $"pdcard pdcard-{card.Priority.ToString().ToLowerInvariant()}")"
					CssClass="pd-carddeck-area">
			<CardTemplate>
				<ExampleTicket Ticket="context" />
			</CardTemplate>
		</PDCardDeck>
	</PDCardDeckGroup>



	<hr />

	<div>
		<p>Example 2: Simple</p>
	</div>

	<PDCardDeckGroup DataProvider="_todoList2">
	</PDCardDeckGroup>
	<hr />

	<div>
		<p>Example 3: Kanban style multiselect board</p>
	</div>

	<PDCardDeckGroup DataProvider="_todoList3">
	</PDCardDeckGroup>

	<EventView />

</DemoSourceView>

