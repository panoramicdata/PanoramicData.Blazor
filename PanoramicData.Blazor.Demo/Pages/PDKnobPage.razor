@page "/pdknob"
@using PanoramicData.Blazor.Enums

<h1>PDKnob Demo</h1>

<DemoSourceView SourceFiles="Pages/PDKnobPage.razor,Pages/PDKnobPage.razor.cs">
	<div style="display: flex; gap: 48px; align-items: flex-start;">
		<div>
			<h3>Volume</h3>
			<PDKnob Mode="PDKnobMode.Volume" @bind-Value="_volumeValue" MaxVolume="@_maxVolume" KnobColor="@_knobColor" ActiveColor="@_activeColor" Label="@_knobLabel" LabelPosition="@_labelPosition" LabelHeightPx="@_labelHeightPx" LabelCssClass="@_labelCssClass" />
			<div>Value: @(_volumeValue.ToString("F2"))</div>
		</div>
		<div>
			<h3>Balance</h3>
			<PDKnob Mode="PDKnobMode.Balance" @bind-Value="_balanceValue" KnobColor="@_knobColor" ActiveColor="@_activeColor" Label="@_knobLabel" LabelPosition="@_labelPosition" LabelHeightPx="@_labelHeightPx" LabelCssClass="@_labelCssClass" />
			<div>Value: @(_balanceValue.ToString("F2"))</div>
		</div>
		<div>
			<h3>Gain</h3>
			<PDKnob Mode="PDKnobMode.Gain" @bind-Value="_gainValue" KnobColor="@_knobColor" ActiveColor="@_activeColor" Label="@_knobLabel" LabelPosition="@_labelPosition" LabelHeightPx="@_labelHeightPx" LabelCssClass="@_labelCssClass" />
			<div>Value: @(_gainValue.ToString("F2"))</div>
		</div>
		<div>
			<h3>Snapping</h3>
			<PDKnob Mode="PDKnobMode.Volume" @bind-Value="@_snapValue" SnapIncrement="@_snapIncrement" KnobColor="@_knobColor" ActiveColor="@_activeColor" Label="@_knobLabel" LabelPosition="@_labelPosition" LabelHeightPx="@_labelHeightPx" LabelCssClass="@_labelCssClass" />
			<div>Value: @(_snapValue.ToString("F2"))</div>
		</div>
	</div>

	<div class="m-t-20">
		<label>Max Volume</label>
		<input type="number" @bind="_maxVolume" />
	</div>
	<div class="m-t-10">
		<label>Snap Increment</label>
		<input type="number" step="0.01" @bind_="snapIncrement" />
	</div>
	<div class="m-t-10">
		<label>Knob Color</label>
		<input type="color" @bind="_knobColor" />
	</div>
	<div class="m-t-10">
		<label>Active Color</label>
		<input type="color" @bind="_activeColor" />
	</div>
	<div class="m-t-10">
		<label>Label</label>
		<input type="text" @bind="_knobLabel" />
	</div>
	<div class="m-t-10">
		<label>Label Position</label>
		<select @bind="_labelPosition">
			<option value="@(PDLabelPosition.Above)">Above</option>
			<option value="@(PDLabelPosition.Below)">Below</option>
		</select>
	</div>
	<div class="m-t-10">
		<label>Label Height (px)</label>
		<input type="number" @b_ind="labelHeightPx" />
	</div>
	<div class="m-t-10">
		<label>Label CSS Class</label>
		<input type="text" @bind="_labelCssClass" />
	</div>
</DemoSourceView>
