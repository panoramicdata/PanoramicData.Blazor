@using Microsoft.JSInterop
@inject IJSRuntime JS

<textarea id="@Id"
          @onblur="OnBlur"
          class="form-control @(IsVisible ? "" : "d-none ") @CssClass"
          disabled="@(!IsEnabled)"
          readonly="@IsReadOnly"
          placeholder="@Placeholder"
          rows="@Rows"
          maxlength="@MaxLength"
          @bind:after="OnAfter"
          @bind:event="oninput"
          @bind="Value" @onkeypress="OnKeypress">@Value</textarea>