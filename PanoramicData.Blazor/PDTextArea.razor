<textarea id="@Id"
          @onblur="OnBlur"
          class="form-control @(IsVisible ? "" : "d-none ") @CssClass"
          disabled="@(!IsEnabled)"
          readonly="@IsReadOnly"
          placeholder="@Placeholder"
          rows="@Rows"
          maxlength="@MaxLength"
          value="@Value"
          @oninput="OnInput"
          @onkeypress="OnKeypress">@Value</textarea>
