<div class="pdtoolbaritem @(IsVisible ? "" : "pd-hidden") @(ShiftRight ? "align-right" : "") @ItemCssClass">
	<PDButton @attributes="Attributes"
			  CssClass="@($"pdtoolbarbutton {CssClass}")"
			  IsEnabled="IsEnabled"
			  Text="@Text"
			  ShortcutKey="ShortcutKey"
			  Size="Size"
			  IconCssClass="@IconCssClass"
			  TextCssClass="@TextCssClass"
			  ToolTip="@(string.IsNullOrWhiteSpace(ToolTip) ? Text : ToolTip)"
			  Url="@Url"
			  Target="@Target"
              Operation="Operation"
              OperationIconCssClass="@OperationIconCssClass"
			  Click="OnClick">
	</PDButton>
</div>