<input id="@Id"
	   class="form-control @TextSizeCssClass @(IsVisible ? "" : "d-none ") @CssClass"
	   value="@Value"
	   disabled="@(!IsEnabled)"
	   readonly="@IsReadOnly"
	   placeholder="@Placeholder"
	   @oninput="OnInput"
	   @onkeypress="OnKeypress" />

@if (ShowClearButton && IsVisible)
{
	<div class="input-group-append">
		<button class="input-group-text btn @ButtonSizeCssClass"
				disabled="@(Value == string.Empty || !IsEnabled)"
				@onclick="OnClear">
			<i class="fas fa-times" />
		</button>
	</div>
}